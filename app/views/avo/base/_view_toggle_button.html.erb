<%
  if available_view_types.count > 1
    case view_type.to_sym
    when :table
      new_view_type = 'grid'
      new_icon = 'view-grid'
      translation_key = 'avo.grid_view'
    when :grid
      new_view_type = 'table'
      new_icon = 'view-list'
      translation_key = 'avo.table_view'
    end
%>
  <%= a_link params.permit!.merge(view_type: new_view_type), color: :blue, 'data-turbo-frame': frame_name, title: t('avo.switch_to_view', { view_type: new_view_type }), 'data-tippy': 'tooltip' do %>
    <%= svg "media/svgs/#{new_icon}.svg" %> <%= t(translation_key, { item: @resource.model_class.model_name.human.downcase }) %>
  <% end %>
<% end %>
