<%= turbo_stream.update Avo::MODAL_FRAME_ID do %>
  <%= render Avo::ModalComponent.new do |c| %>
    <%= render Avo::MediaLibrary::ListComponent.new parent: @parent, attaching: true, turbo_frame: Avo::MODAL_FRAME_ID %>

    <% c.with_controls do %>
      <%= a_button type: :button,
        data: { action: 'click->modal#close' },
        size: :sm,
        color: :gray do %>
        <%= t('avo.close') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
