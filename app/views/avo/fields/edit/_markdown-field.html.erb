<%= edit_field_wrapper field: field, index: index, form: form, displayed_in_modal: displayed_in_modal, full_width: true do %>
  <div data-controller="simple-mde">
    <%= form.text_area field.id,
      class: input_classes('w-full js-has-simple-mde-editor', has_error: (@model.present? and @model.errors.include?(field.id))),
      placeholder: field[:placeholder],
      disabled: field.readonly,
      'data-simple-mde-target': 'element',
      'data-view': :edit do %>
      <%= field.value %>
    <% end %>
  </div>
<% end %>
