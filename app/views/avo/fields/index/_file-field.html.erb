<%= index_field_wrapper field: field do %>
  <% if field.value.representable? && field.is_image && field.value.attached? %>
    <%= link_to_if field.link_to_resource, image_tag(field.variant, class: 'max-h-full'), resource_path(resource.model), class: 'block h-8' %>
  <% else %>
    <%= field.value.filename %>
  <% end %>
<% end %>
