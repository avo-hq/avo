<% if field.value.present? %>
  <turbo-frame id="<%= field.frame_name %>" src="<%= field.frame_url %>" target="_top">
    <%= render(Avo::LoadingComponent.new(title: field.name)) %>
  </turbo-frame>
<% else %>
  <%= panel(title: field.id.capitalize) do |c| %>
    <% c.with :tools do %>
      <%= a_link resource_attach_path(@model.model_name.route_key, @model.id, field.id), color: 'indigo', 'data-turbo-frame': 'attach_modal' do %>
        <%= svg 'media/svgs/view-grid-add.svg' %> <%= t('avo.attach_item', { item: field.id }).capitalize %>
      <% end %>
    <% end %>

    <% c.with :body do %>
      <div class="py-8 flex justify-center items-center">
        <%= empty_state field.id %>
      </div>
    <% end %>
  <% end %>
<% end %>
