<%= show_field_wrapper field: field, index: index do %>
  <%
    status = 'success'
    status = 'failed' if field[:failed_when].include? field[:value].to_sym
    status = 'loading' if field[:loading_when].include? field[:value].to_sym
  %>
  <%= render partial: 'avo/fields/common/status', locals: {label: field[:value], status: status} %>
<% end %>
