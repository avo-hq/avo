<%
  classes = 'absolute inset-auto left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2'
  label = t 'avo.no_item_found', { item: resource.name.downcase }

  # if (this.viaResourceName) return this.$t('avo.no_related_item_found', { item: this.resourceName.toLowerCase() })
%>
<div class="relative flex-1 py-12">
  <div class="relative block text-gray-300 h-64 w-full">
    <%= svg 'media/svgs/avocado.svg', class: "#{classes} h-20 text-gray-400" %>
    <%= svg 'media/svgs/code.svg', class: "#{classes} h-8 -ml-20 -mt-12" %>
    <%= svg 'media/svgs/fire.svg', class: "#{classes} h-8 -ml-10 -mt-24" %>
    <%= svg 'media/svgs/color-swatch.svg', class: "#{classes} h-8 ml-8 -mt-24" %>
    <%= svg 'media/svgs/globe.svg', class: "#{classes} h-8 ml-20 -mt-12" %>
    <%= svg 'media/svgs/library.svg', class: "#{classes} h-8 -ml-20 mt-4" %>
    <%= svg 'media/svgs/photograph.svg', class: "#{classes} h-8 ml-20 mt-4" %>
  </div>
  <div class="relative block text-center text-lg text-gray-600 font-semibold -mt-10"><%= label %></div>
</div>
