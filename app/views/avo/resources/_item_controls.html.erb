<div class="space-x-2 flex flex-row justify-around w-full">
  <%# add via_resource_name and via_resource_id params  %>
  <% if @authorization.set_record(resource.model).authorize_action(:show, raise_exception: false) %>
    <%= link_to svg('media/svgs/eye.svg', class: 'text-gray-500 h-6 hover:text-gray-600'),
    resource_path(resource.model),
    title: t('avo.view_item', { item: resource.model.model_name.name.downcase }).capitalize,
    data_control: :show %>
  <% end %>
  <% if @authorization.set_record(resource.model).authorize_action(:edit, raise_exception: false) %>
    <%= link_to svg('media/svgs/edit.svg', class: 'text-gray-500 h-6 hover:text-gray-600'),
      edit_resource_path(resource.model),
      title: t('avo.edit_item', { item: resource.model.model_name.name.downcase }).capitalize,
      data_control: :edit %>
  <% end %>
  <% if params[:via_relation] == 'has_many' %>
    <%#= a_link helpers.resource_attach_path(params[:via_resource_name], params[:via_resource_id], params[:via_relation_param], @models.first.id), color: 'indigo', method: :delete, data: { confirm: "Are you sure you want to detach this #{@resource.singular_name}." } do %>

    <%# end if params[:via_relation].in?(['has_one', 'has_many']) and @models.present? %>

    <%# if @authorization.set_record(resource.model).authorize_action(:destroy, raise_exception: false) %>
      <%= link_to svg('media/svgs/trash-sm.svg', class: 'text-gray-500 h-6 hover:text-gray-600'),
        resource_attach_path(params[:via_resource_name], params[:via_resource_id], params[:via_relation_param], resource.model.id),
        title: t('avo.detach_item', { item: resource.model.model_name.name.downcase }).capitalize,
        method: :delete,
        data: { confirm: t('avo.are_you_sure_detach_item', { item: resource.model.model_name.name.downcase }) },
        data_control: :destroy %>
    <%# end %>
  <% else %>
    <% if @authorization.set_record(resource.model).authorize_action(:destroy, raise_exception: false) %>
      <%= link_to svg('media/svgs/trash.svg', class: 'text-gray-500 h-6 hover:text-gray-600'),
        resource_path(resource.model),
        title: t('avo.delete_item', { item: resource.model.model_name.name.downcase }).capitalize,
        method: :delete,
        data: {confirm: t('avo.are_you_sure') },
        data_control: :destroy %>
    <% end %>
  <% end %>
