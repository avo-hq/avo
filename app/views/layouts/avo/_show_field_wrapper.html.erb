  <div class="h-16 flex self-start items-center">
    <div class="w-48 md:w-64 px-8" data-slot="label">
      <%= field[:name] %> <% if field[:required] %> <span class="text-red-600">*</span> <% end %>
    </div>
  </div>
  <div class="flex-1 flex flex-row h-full ml-2 min-h-inherit">
    <div class="px-6 self-center <% if full_width %> w-full <% else %> w-8/12 <% end %>" data-slot="value">
      <% if field[:value].blank? and dash_if_empty %>
        â€”
      <% else %>
        <%= yield %>
      <% end %>
    </div>
  </div>
</div>
