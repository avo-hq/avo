<!DOCTYPE html>
<html>
<head>
  <title>Avo</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= javascript_pack_tag 'application' %>
  <%= stylesheet_pack_tag 'application', media: 'all' %>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-200">

<div id="app" class="flex min-h-screen flex-row h-full">
  <application-sidebar :resources='<%= Avo::App.get_resources_navigation.as_json.html_safe %>'></application-sidebar>

  <div class="flex-1 h-full overflow-auto">
    <div class="fixed bg-white p-2 shadow-md h-16 w-full flex items-center z-40">
      <div class="w-64">
        <resources-search :global="true">
      </div>
    </div>

    <div class="content p-8 pt-20">
      <%= yield %>
    </div>
  </div>

</div>
</body>
</html>
