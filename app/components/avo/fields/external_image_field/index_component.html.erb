<%= index_field_wrapper field: @field, flush: true do %>
  <% if @field.value.present? %>
    <%= image_tag @field.value,
      height: @field.height,
      style: "border-radius: #{@field.radius}px; max-height: #{@field.height}#{@field.height.to_s&.ends_with?('px') ? '' : 'px'};"
    %>
  <% end %>
<% end %>
