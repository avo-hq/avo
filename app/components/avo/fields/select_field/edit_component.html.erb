<%= field_wrapper(**field_wrapper_args) do %>
  <%= @form.select @field.id, options, {
      include_blank: (params[:controller] == "avo/bulk_update") || @field.include_blank
    },
    multiple: @field.multiple,
    aria: {
      placeholder: @field.placeholder
    },
    class: classes("w-full"),
    data: @field.get_html(:data, view: view, element: :input),
    disabled: disabled?,
    style: @field.get_html(:style, view: view, element: :input),
    value: @field.record.present? ? @field.record[@field.id] : @field.value,
    placeholder: @field.include_blank.present? ? nil : @field.placeholder,
    autocomplete: @field.autocomplete,
    autofocus: @autofocus
  %>
<% end %>
