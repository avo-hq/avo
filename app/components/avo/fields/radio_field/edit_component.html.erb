<%= field_wrapper(**field_wrapper_args) do %>
  <div class="flex flex-col gap-2">
    <% @field.options.each do |key, value| %>
      <div>
        <%= form.radio_button @field.id, key, checked: (@field.value.to_s == key.to_s) %>
        <%= form.label @field.id, value, value: key %>
      </div>
    <% end %>
  </div>
<% end %>
