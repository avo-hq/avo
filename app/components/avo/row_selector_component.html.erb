<%= content_tag :label, name: t("avo.select_item") do %>
  <%= content_tag :span, t("avo.select_item"), class: 'sr-only' %>
  <%= tag :input,
    type: "checkbox",
    name: t("avo.select_item"),
    title: t("avo.select_item"),
    autocomplete: :off,
    checked: @checked,
    class: class_names("mx-2", {
      "absolute block start-0 top-0 mt-3 z-10 hidden": @floating,
    }),
    data: {
      index: @index,
      action: data_action,
      item_select_all_target: "itemCheckbox",
      tippy: "tooltip"
    }
  %>
<% end %>
