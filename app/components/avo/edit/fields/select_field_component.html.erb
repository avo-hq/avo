<%
  options = @field.options
  value = @field.options[@field.value]
  options = options.map { |label, value| [value, value] }.to_h if @field.display_value
%>

<%= edit_field_wrapper field: @field, index: @index, form: @form, resource: @resource, displayed_in_modal: @displayed_in_modal do %>
  <%= @form.select @field.id, options, { selected: value, prompt: @field.placeholder }, {
      class: helpers.input_classes(' w-full', has_error: @field.model_errors.include?(@field.id)),
      disabled: @field.readonly,
      value: @resource.model.present? ? @resource.model[@field.id] : @field.value } %>
<% end %>
