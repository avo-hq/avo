<%= edit_field_wrapper field: @field, index: @index, form: @form, resource: @resource, displayed_in_modal: @displayed_in_modal do %>
  <%= @form.select @field.id, @field.select_options, { selected: @field.value, prompt: @field.placeholder },
    class: helpers.input_classes('select-input w-full', has_error: (@resource.model.present? and @resource.model.errors.include?(@field.id))),
    placeholder: @field.placeholder,
    disabled: @field.readonly
  %>
<% end %>
