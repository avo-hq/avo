<%= edit_field_wrapper field: @field, index: @index, form: @form, resource: @resource, displayed_in_modal: @displayed_in_modal do %>
  <% trix_id = "trix_#{@resource.name.underscore}_#{@field.id}" %>
  <div data-controller="trix-field">
    <trix-editor input="<%= trix_id %>"></trix-editor>
    <%= @form.text_area @field.id,
      id: trix_id,
      class: helpers.input_classes('w-full hidden', has_error: @field.model_errors.include?(@field.id)),
      placeholder: @field.placeholder,
      disabled: @field.readonly,
      rows: @field.meta[:rows]
    %>
  </div>
<% end %>
