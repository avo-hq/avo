<%= edit_field_wrapper field: @field, index: @index, form: @form, displayed_in_modal: @displayed_in_modal do %>
  <%= @form.text_area @field.id,
    class: helpers.input_classes('w-full', has_error: (@resource.model.present? and @resource.model.errors.include?(@field.id))),
    placeholder: @field.placeholder,
    disabled: @field.readonly,
    rows: @field.meta[:rows] %>
<% end %>
