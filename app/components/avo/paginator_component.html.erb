<div
  class="
    aborder-t aborder-slate-200 flex flex-col items-center justify-between space-y-2 rounded-2xl sm:flex-row
    sm:space-y-0
  "
>
  <div class="flex-2 sm:flex sm:items-center sm:justify-between">
    <div>
      <div class="flex items-center text-sm leading-5 text-slate-600">
        <div data-controller="per-page">
          <div class="flex items-center">
            <%= content_tag :label, name: t('avo.per_page').downcase do %>
              <%= select_tag 'per_page',
                options_for_select(per_page_options, @index_params[:per_page]),
                class: 'appearance-none inline-flex bg-white-100 disabled:bg-white-400 disabled:cursor-not-allowed focus:bg-white text-slate-700 disabled:text-slate-600 rounded-md py-1 px-2 leading-tight border border-slate-300 outline-hidden focus:border-slate-400 w-16 mr-1 text-sm',
                data: {
                  'turbo-frame': @turbo_frame,
                  'per-page-target': 'selector',
                  action: 'change->per-page#reload'
                } %>

              <%= t('avo.per_page').downcase %>
            <% end %>
          </div>

          <% per_page_options.each do |option| %>
            <%= link_to "Change to #{option} items per page", change_items_per_page_url(option), class: 'hidden', 'data-per-page-option': option, 'data-turbo-frame': @turbo_frame %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex">
    <div class="flex-2 space-y-2 text-center sm:flex sm:items-center sm:justify-between sm:space-y-0 sm:text-left <%= "pagy-gem-version-#{helpers.pagy_major_version}" %>">
      <% if @resource.pagination_type.default? %>
        <div class="mr-4 text-sm text-slate-600"><%== helpers.pagy_info @pagy %></div>
      <% end %>

      <% if @pagy.pages > 1 %>
        <%== helpers.pagy_nav @pagy, anchor_string: "data-turbo-frame=\"#{@turbo_frame}\"" %>
      <% end %>
    </div>
  </div>
</div>
