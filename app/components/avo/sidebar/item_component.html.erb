<% if @path.present? %>
  <%= send link_method, @path, class: 'px-4 block mx-6 leading-none py-2 text-black rounded font-medium hover:bg-gray-150', active: @active, target: @target do %>
    <%= @label %>
  <% end %>
<% else %>
  <%= content_tag :div, class: 'px-4 block mx-6 leading-none py-2 text-black rounded font-medium hover:bg-gray-150', active: @active, target: @target do %>
    <%= @label %>
  <% end %>
<% end %>
