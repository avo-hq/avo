<%= tag.div class: "pb-2 space-y-1", data: do %>
  <% if item.name.present? %>
    <% if collapsable %>
      <div
        class="flex justify-between cursor-pointer px-10 pe-2 pt-2 pb-0 text-gray-400"
        data-action="click->menu#triggerCollapse"
        data-menu-key-param="<%= key %>"
      >
        <div class="flex items-center text-xs uppercase font-semibold leading-none">
          <%= item.name %>
        </div>
        <div class="<%= 'rotate-90' if collapsed %>"
          data-menu-target="svg"
          >
          <%= helpers.svg 'heroicons/outline/chevron-down', class: "h-4 me-0.5" %>
        </div>
      </div>
    <% else %>
      <div class="flex justify-between px-10 pe-2 pt-2 pb-0 text-gray-400">
        <div class="flex items-center text-xs uppercase font-semibold leading-none">
          <%= item.name %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= content_tag :div, class: class_names("w-full space-y-1 css-animate-slide-down"),
    hidden: collapsed,
    data: {
      menu_target: :items,
    } do %>
    <% @items.each do |item| %>
      <%= render Avo::Sidebar::ItemSwitcherComponent.new item: item %>
    <% end %>
  <% end %>
<% end %>
