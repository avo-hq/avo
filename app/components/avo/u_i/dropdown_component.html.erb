<%= content_tag :div, class: class_names("dropdown"), data: {controller: "dropdown-menu"} do %>
  <%= trigger %>

  <% if items.present? %>
    <%= render Avo::UI::DropdownMenuComponent.new(
      data: {dropdown_menu_target: "menu"},
      classes: @classes
    ) do %>
      <%= items %>
    <% end %>
  <% end %>
<% end %>
