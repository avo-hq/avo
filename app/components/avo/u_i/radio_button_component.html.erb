<%= content_tag :label, class: class_names(
  "radio-button",
  @classes,
  {
    "radio-button--disabled": @disabled
  }
), for: @id do %>
  <%= tag.input(
    type: "radio",
    id: @id,
    name: @name,
    value: @value,
    checked: @checked,
    disabled: @disabled,
    title: @title,
    autocomplete: @autocomplete,
    data: @data
  ) %>

  <% if @label.present? || @description.present? %>
    <span class="radio-button__content">
      <%= content_tag(:span, @label, class: "radio-button__label") if @label.present? %>
      <%= content_tag(:span, @description, class: "radio-button__description") if @description.present? %>
    </span>
  <% end %>
<% end %>
