<%= content_tag :span, class: class_names(
  "badge",
  {
    "badge--#{@style}" => @style.present?,
    "badge--#{@color}" => @color.present?,
  },
  @classes
) do %>
  <%= svg(@icon, class: "badge__icon") if @icon.present? %>
  <%= content_tag(:span, @label, class: "badge__label") if @label.present? %>
<% end %>
