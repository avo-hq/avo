<div class="flex flex-1 flex-col items-center">
  <%= render ui.panel do |panel| %>
    <% panel.with_header do %>
      <%= render ui.panel_header(
        title: "Custom tool",
        description: "Custom tool description"
      ) do |header| %>
        <% header.with_controls do %>
          <div class="text-sm italic">This is the panels tools section.</div>

          <div class="flex gap-3">
            <%= render ui.button(label: "Label", size: :xs) %>
            <%= render ui.button(label: "Label", size: :xs) %>
          </div>
        <% end %>

        <% header.with_discreet_information do %>
          <div class="flex gap-2">
            <%= render Avo::DiscreetInformationComponent.new(
              as: :key_value,
              key: "Status",
              text: "Active"
            ) %>

            <%= render Avo::DiscreetInformationComponent.new(
              as: :badge,
              text: "Verified",
              icon: "heroicons/outline/paper-clip"
            ) %>

            <%= render Avo::DiscreetInformationComponent.new(
              as: :text,
              text: "Last login: 2 hours ago"
            ) %>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <% panel.with_body do %>
      <%= render ui.card(title: "What a nice new tool ðŸ‘‹") do |card| %>
        <% card.with_body do %>
          <%#
            = render Avo::FieldWrapperComponent.new(
              label: "Email",
              <div class="text-sm text-gray-900">john.doe@example.com</div>
            ) do
          %>
          <%# end %>
          <div class="min-h-24 py-6">
            <div class="space-y-4 px-6">
              Go to
              <%= link_to "new comment", avo.new_resources_comment_path %>
              ,
              <%= link_to 'the first user', avo.resources_user_path(1) %>
              , or
              <%= link_to 'hey on main app', main_app.hey_path %>
              .
              <p>
                You can edit this file here
                <code class="rounded-sm bg-gray-500 p-1 text-sm text-white">app/views/avo/tools/custom_tool.html.erb</code>.
              </p>

              <p>
                For this tool we created the
                <code class="rounded-sm bg-gray-500 p-1 text-sm text-white">custom_tool</code> method in the
                <code class="rounded-sm bg-gray-500 p-1 text-sm text-white">Avo::ToolsController</code>. You may delete
                it or move it to your own controller.
              </p>

              <p>
                A new <code class="rounded-sm bg-gray-500 p-1 text-sm text-white">Custom tool</code> item should have
                been added to the sidebar. Edit it in
                <code class="rounded-sm bg-gray-500 p-1 text-sm text-white">app/views/avo/sidebar/items/_custom_tool.html.erb</code>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
