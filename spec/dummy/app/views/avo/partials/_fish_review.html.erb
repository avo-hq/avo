<%= render Avo::PanelComponent.new do |c| %>
  <% c.body do %>
    <div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
      <%= avo_edit_field :body, as: :trix, form: f, help: "What should the review say?", required: true, component_options: {compact: false, stacked: false} %>
      <%= avo_edit_field :user, as: :belongs_to, form: f, help: "Set the fish type", required: true, component_options: {compact: false} %>
    </div>
  <% end %>
<% end %>
