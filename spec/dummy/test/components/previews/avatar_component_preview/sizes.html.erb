<div style="display: flex; gap: 1rem; align-items: center; padding: 1rem;">
  <div style="display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
    <h4>Large (80px)</h4>
    <%= render Avo::AvatarComponent.new(type: "initial", initial: "L", size: "large", theme: "blue") %>
  </div>

  <div style="display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
    <h4>Medium (48px)</h4>
    <%= render Avo::AvatarComponent.new(type: "initial", initial: "M", size: "medium", theme: "green") %>
  </div>

  <div style="display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
    <h4>Small (32px)</h4>
    <%= render Avo::AvatarComponent.new(type: "initial", initial: "S", size: "small", theme: "orange") %>
  </div>

  <div style="display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
    <h4>Tiny (20px)</h4>
    <%= render Avo::AvatarComponent.new(type: "initial", initial: "T", size: "tiny", theme: "purple") %>
  </div>
</div>
