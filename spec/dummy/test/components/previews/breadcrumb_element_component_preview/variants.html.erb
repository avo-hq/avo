<div style="padding: 2rem;">
  <div style="display: flex; flex-direction: column; gap: 2rem;">
    <div>
      <h3 style="margin-bottom: 1rem; font-weight: 600;">Link Elements</h3>
      <div style="display: flex; flex-direction: column; gap: 1rem;">
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Home",
          url: "https://example.com/home"
        ) %>
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Dashboard",
          url: "https://example.com/dashboard",
          icon: "heroicons/outline/home"
        ) %>
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Page",
          url: "https://example.com/page",
          separator: ">"
        ) %>
      </div>
    </div>

    <div>
      <h3 style="margin-bottom: 1rem; font-weight: 600;">Current Page Elements</h3>
      <div style="display: flex; flex-direction: column; gap: 1rem;">
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Current Page",
          current: true
        ) %>
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Current Page",
          icon: "heroicons/outline/document",
          current: true
        ) %>
      </div>
    </div>

    <div>
      <h3 style="margin-bottom: 1rem; font-weight: 600;">Separators</h3>
      <div style="display: flex; flex-direction: column; gap: 1rem;">
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Page",
          url: "https://example.com/page",
          separator: ">"
        ) %>
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Page",
          url: "https://example.com/page",
          separator: "/"
        ) %>
        <%= render Avo::BreadcrumbElementComponent.new(
          text: "Page",
          url: "https://example.com/page",
          separator: ":"
        ) %>
      </div>
    </div>
  </div>
</div>

