<div class="p-8 bg-white">
  <h3 class="text-lg font-semibold text-gray-900 mb-6">Solid Style - With Icon</h3>
  <div class="flex flex-wrap gap-3">
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "orange", style: "solid", icon: "avo/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "yellow", style: "solid", icon: "avo/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "green", style: "solid", icon: "avo/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "teal", style: "solid", icon: "avo/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "blue", style: "solid", icon: "avo/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "purple", style: "solid", icon: "avo/paperclip") %>
  </div>

  <h3 class="text-lg font-semibold text-gray-900 mb-6 mt-8">Solid Style - Without Icon</h3>
  <div class="flex flex-wrap gap-3">
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "orange", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "yellow", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "green", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "teal", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "blue", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Badge", color: "purple", style: "solid") %>
  </div>

  <p class="text-sm text-gray-600 mt-6 italic">
    Note: Solid style (dark backgrounds) only available for orange, yellow, green, teal, blue, and purple.
  </p>
</div>
