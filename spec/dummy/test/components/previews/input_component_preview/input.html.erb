<div class="p-8 space-y-8 bg-white">
  <div class="text-lg font-semibold text-content mb-6">Input Field - Size Variants & States</div>

  <div class="grid grid-cols-3 gap-6">
    <!-- Header Row -->
    <div class="text-sm font-semibold text-content">Small (sm)</div>
    <div class="text-sm font-semibold text-content">Medium (md)</div>
    <div class="text-sm font-semibold text-content">Large (lg)</div>

    <!-- Default (Enabled) -->
    <div>
      <div class="text-xs font-medium text-content-secondary mb-2">Default</div>
      <div class="field-wrapper--full-width">
        <%= tag.div class: "field-wrapper__content-wrapper" do %>
          <input name="text" type="text" class="input--size-sm" placeholder="Label" autocomplete="off">
          <div class="field-wrapper__help max-w-sm">Help text</div>
        <% end %>
      </div>
    </div>

    <div>
      <div class="text-xs font-medium text-content-secondary mb-2">Default</div>
