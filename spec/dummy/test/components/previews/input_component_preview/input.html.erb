          <span class="field-wrapper__help max-w-sm">Help text</span>
        <% end %>
      </div>
    </div>

    <!-- Filled -->
    <div>
      <div class="text-xs font-medium text-content-secondary mb-2">Filled</div>
      <div class="field-wrapper--full-width">
        <%= tag.div class: "field-wrapper__content-wrapper" do %>
          <input name="text" type="text" class="input--size-sm input-field--success" value="Value" placeholder="Label" autocomplete="off">
          <span class="field-wrapper__help max-w-sm">Help text</span>
        <% end %>
      </div>
    </div>

    <div>
