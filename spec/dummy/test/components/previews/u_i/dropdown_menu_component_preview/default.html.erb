<div class="border-2 border-gray-200 rounded-md p-4 w-96 flex justify-center items-center">
  <div class="flex flex-wrap gap-8">
    <div class="relative inline-flex" data-controller="dropdown">
      <%= render Avo::UI::IconButtonComponent.new(
        action: "click->dropdown#dropdownItemActions",
        icon: "tabler/outline/dots-vertical"
      ) %>

      <%= render Avo::UI::DropdownMenuComponent.new(
        data: {dropdown_target: "dropdownMenuComponent"},
        classes: "hidden"
      ) do %>
        <%= link_to("#", class: "dropdown-menu__item") do %>
          <%= svg("tabler/outline/pencil", class: "dropdown-menu__icon") %>
          <span class="dropdown-menu__label">Edit</span>
        <% end %>
        <%= link_to("#", class: "dropdown-menu__item") do %>
          <%= svg("tabler/outline/eye", class: "dropdown-menu__icon") %>
          <span class="dropdown-menu__label">View</span>
        <% end %>
        <%= link_to("#", class: "dropdown-menu__item") do %>
          <%= svg("tabler/outline/trash", class: "dropdown-menu__icon") %>
          <span class="dropdown-menu__label">Delete</span>
        <% end %>
      <% end %>
    </div>

    <div class="relative inline-flex" data-controller="dropdown">
      <%= render Avo::UI::IconButtonComponent.new(
        action: "click->dropdown#dropdownItemActions",
        icon: "tabler/outline/dots-vertical"
      ) %>

      <%= render Avo::UI::DropdownMenuComponent.new(
        data: {dropdown_target: "dropdownMenuComponent"},
        classes: "hidden"
      ) do %>
        <%= button_tag("Source Code button", type: "button", class: "dropdown-menu__item") %>
        <%= button_tag("Documentation button", type: "button", class: "dropdown-menu__item") %>
        <%= button_tag("Blog button", type: "button", class: "dropdown-menu__item") %>
      <% end %>
    </div>
  </div>

</div>
