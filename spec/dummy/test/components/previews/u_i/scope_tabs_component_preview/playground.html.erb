<div class="p-8 bg-white space-y-6">
  <div class="p-6 border-2 border-dashed border-gray-300 rounded-lg bg-white">
    <%= render Avo::UI::Tabs::ScopeTabsComponent.new do %>
      <% Array.new(tab_count) do |i| %>
        <%= render Avo::UI::Tabs::ScopeTabComponent.new(
          label: "Tab #{i + 1}",
          active: i == active_tab,
          icon: show_icons ? "heroicons/outline/external-link" : nil
        ) %>
      <% end %>
    <% end %>
  </div>

  <div class="bg-gray-100 p-4 rounded-lg">
    <h3 class="text-sm font-semibold mb-2">Configuration:</h3>
    <div class="text-sm space-y-1 font-mono">
      <div>Tab Count: <strong><%= tab_count %></strong></div>
      <div>Active Tab: <strong><%= active_tab + 1 %></strong> (index <%= active_tab %>)</div>
      <div>Show Icons: <strong><%= show_icons ? 'Yes' : 'No' %></strong></div>
    </div>
  </div>
</div>
