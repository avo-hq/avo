<%
  # Get product image for default example
  macbook_product = Product.find_by(title: "MacBook Pro")
  macbook_image = if macbook_product&.image&.attached?
    variant = macbook_product.image.variant(resize_to_fill: [300, 300])
    main_app.url_for(variant)
  end
%>
<div class="p-8 bg-white">
  <h3 class="text-lg font-semibold text-gray-900 mb-6">Default Grid Item</h3>
  <div class="flex gap-4">
    <%= render Avo::UI::GridItemComponent.new(
      title: "MacBook Pro",
      description: "Supercharged for pros",
      badge_label: "New",
      badge_color: :success,
      image: macbook_image,
      checkbox_checked: false
    ) %>
  </div>
</div>
