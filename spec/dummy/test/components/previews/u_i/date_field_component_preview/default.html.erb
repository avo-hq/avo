<div class="p-8 space-y-8 bg-white">
  <div class="text-lg font-semibold text-content mb-6">Date Field â€“ States</div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-2xl">
    <!-- Default -->
    <div>
      <div class="text-xs font-medium text-content-secondary mb-2">Default</div>
      <div class="field-wrapper__content">
        <div class="field-wrapper__content-wrapper">
          <div class="field-wrapper__input">
            <input
              type="text"
              class="input__field input__field--md input__field--date w-full"
              placeholder="Select date"
              value=""
              autocomplete="off"
            >
          </div>
          <div class="field-wrapper__help mt-2">Select a date</div>
        </div>
      </div>
    </div>

    <!-- With Value -->
    <div>
      <div class="text-xs font-medium text-content-secondary mb-2">With Value</div>
      <div class="field-wrapper__content">
        <div class="field-wrapper__content-wrapper">
          <div class="field-wrapper__input" data-controller="date-field">
            <input
              class="input__field input__field--md input__field--date w-full"
              placeholder="Select date"
              value="22/07/1973"
              autocomplete="off"
            >
          </div>
          <div class="field-wrapper__help mt-2">22/07/1973</div>
        </div>
      </div>
    </div>

    <!-- Disabled -->
    <div>
      <div class="text-xs font-medium text-content-secondary mb-2">Disabled</div>
      <div class="field-wrapper__content">
        <div class="field-wrapper__content-wrapper">
          <div class="field-wrapper__input">
            <input
              class="input__field input__field--md input__field--date w-full"
              placeholder="Select date"
              value="22/07/1973"
              autocomplete="off"
              disabled
            >
          </div>
          <div class="field-wrapper__help mt-2 opacity-60">This field is disabled</div>
        </div>
      </div>
    </div>

    <!-- Disabled Empty -->
    <div>
      <div class="text-xs font-medium text-content-secondary mb-2">Disabled Empty</div>
      <div class="field-wrapper__content">
        <div class="field-wrapper__content-wrapper">
          <div class="field-wrapper__input" data-controller="date-field">
            <input
              type="datetime-local"
              class="input__field input__field--md input__field--date w-full"
              placeholder="Select date"
              value=""
              autocomplete="off"
              disabled
            >
          </div>
          <div class="field-wrapper__help mt-2 opacity-60">This field is disabled</div>
        </div>
      </div>
    </div>
  </div>
</div>
