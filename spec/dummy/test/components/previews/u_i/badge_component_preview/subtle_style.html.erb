    <%= render Avo::UI::BadgeComponent.new(label: "Teal", style: :subtle, color: "teal", icon: "tabler/outline/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Blue", style: :subtle, color: "blue", icon: "tabler/outline/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Purple", style: :subtle, color: "purple", icon: "tabler/outline/paperclip") %>
