<div class="p-8 bg-white">
  <h3 class="text-lg font-semibold text-gray-900 mb-6">Subtle Style - With Icon</h3>
  <div class="flex flex-wrap gap-3">
    <%= render Avo::UI::BadgeComponent.new(label: "Orange", style: :subtle, color: "orange", icon: "tabler/outline/paperclip") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Yellow", style: :subtle, color: "yellow", icon: "tabler/outline/paperclip") %>
