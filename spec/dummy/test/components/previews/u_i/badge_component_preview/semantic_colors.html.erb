<div class="p-8 space-y-6 bg-white">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Semantic Colors - Subtle Style (default)</h3>
  <div class="flex flex-wrap gap-3">
    <%= render Avo::UI::BadgeComponent.new(label: "Neutral", style: :subtle, color: "neutral") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Success", style: :subtle, color: "success") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Danger", style: :subtle, color: "danger") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Warning", style: :subtle, color: "warning") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Info", style: :subtle, color: "info") %>
  </div>

  <h3 class="text-lg font-semibold text-gray-900 mb-4 mt-8">Semantic Colors - Solid Style</h3>
  <div class="flex flex-wrap gap-3">
    <%= render Avo::UI::BadgeComponent.new(label: "Neutral", color: "neutral", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Success", color: "success", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Danger", color: "danger", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Warning", color: "warning", style: "solid") %>
    <%= render Avo::UI::BadgeComponent.new(label: "Info", color: "info", style: "solid") %>
  </div>
</div>
