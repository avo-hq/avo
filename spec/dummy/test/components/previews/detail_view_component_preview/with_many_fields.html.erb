<div style="padding: 2rem; background: #fafafa;">
  <%= render Avo::DetailViewComponent.new(
    sidebar_position: sidebar_position,
    show_sidebar: show_sidebar
  ) do |detail_view| %>
    <% detail_view.with_header do %>
      <%= render Avo::HeaderComponent.new(
        title: "Product Details",
        description: "Complete product information"
      ) do |header| %>
        <% header.with_avatar do %>
          <%= render Avo::AvatarComponent.new(
            type: "initial",
            initial: "P",
            size: "large"
          ) %>
        <% end %>
      <% end %>
    <% end %>

    <% 10.times do |i| %>
      <% detail_view.with_field do %>
        <%= render Avo::FieldWrapperComponent.new(
          label: "Label #{i + 1}",
          compact: false
        ) do %>
          <div class="text-sm text-gray-900">Value for field number <%= i + 1 %></div>
        <% end %>
      <% end %>
    <% end %>

    <% if show_sidebar %>
      <% detail_view.with_sidebar do %>
        <div class="flex flex-col gap-6">
          <div class="flex flex-col items-center gap-4">
            <%= render Avo::AvatarComponent.new(
              type: "initial",
              initial: "P",
              size: "large"
            ) %>
          </div>

          <div class="flex flex-col gap-4">
            <h4 class="mb-2 text-sm font-semibold text-gray-900">Quick Info</h4>

            <div class="flex flex-col gap-3">
              <%= render Avo::FieldWrapperComponent.new(
                label: "SKU",
                compact: true,
                stacked: true
              ) do %>
                <div class="text-sm text-gray-900">PRD-001</div>
              <% end %>

              <%= render Avo::FieldWrapperComponent.new(
                label: "Category",
                compact: true,
                stacked: true
              ) do %>
                <div class="text-sm text-gray-900">Electronics</div>
              <% end %>

              <%= render Avo::FieldWrapperComponent.new(
                label: "Price",
                compact: true,
                stacked: true
              ) do %>
                <div class="text-sm text-gray-900">$299.99</div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
