#!/bin/sh
#/ Usage: bin/conductor-setup
#/
#/ Setup files that are not tracked in git for Conductor workspaces.
#/ This is run automatically when a new workspace is created.

set -e

DATABASE_NAME="avo_dummy_$CONDUCTOR_WORKSPACE_NAME"
TEST_DATABASE_NAME="avo_dummy_$CONDUCTOR_WORKSPACE_NAME_test"

DATABASE_URL=postgresql://localhost/$DATABASE_NAME bin/rails db:drop
RAILS_ENV=test DATABASE_URL=postgresql://localhost/$TEST_DATABASE_NAME bin/rails db:drop
