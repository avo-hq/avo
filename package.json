{
  "name": "avo",
  "description": "The most beautiful, easy-to-use Ruby on Rails admin framework",
  "main": "index.js",
  "author": "Adrian Marin <adrian@adrianthedev.com>",
  "license": "Commercial",
  "private": true,
  "scripts": {
    "js:visualize": "yarn prod:build:js -- --metafile=js_bundle_metadata.json && esbuild-visualizer --metadata=js_bundle_metadata.json --filename=js_bundle_stats.html",
    "build": "yarn build:js && yarn build:css",
    "build:js": "esbuild app/javascript/*.js --bundle --sourcemap --outdir=app/assets/builds",
    "build:custom-js": "esbuild spec/dummy/app/javascript/*.js --bundle --sourcemap --minify --outdir=app/assets/builds",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/avo.base.css -o ./app/assets/builds/avo.base.css --postcss",
    "prod:build": "yarn prod:build:js && yarn prod:build:css",
    "prod:build:js": "esbuild app/javascript/*.js --bundle --sourcemap --minify --outdir=public/avo-assets",
    "prod:build:css": "tailwindcss -i ./app/assets/stylesheets/avo.base.css -o ./public/avo-assets/avo.base.css --postcss",
    "export": "yarn export:heroicons && yarn export:tailwind-safelist",
    "export:heroicons": "node scripts/export-heroicons.js",
    "export:tailwind-safelist": "node scripts/export-tailwind-safelist.js"
  },
  "dependencies": {
    "@algolia/autocomplete-js": "^1.0.0-alpha.46",
    "@algolia/autocomplete-theme-classic": "^1.0.0-alpha.46",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.1.1",
    "@rails/activestorage": "^6.0.2-1",
    "@rails/ujs": "^6.1.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/jit": "^0.1.17",
    "@tailwindcss/typography": "^0.5.1",
    "@yaireo/tagify": "^4.11.0",
    "autoprefixer": "^10.4.2",
    "axios": "^0.21.2",
    "chart.js": "^3.7.0",
    "chartkick": "^4.1.1",
    "codemirror": "5.59.1",
    "core-js": "^3.21.0",
    "css-loader": "^5.2.0",
    "el-transition": "^0.0.7",
    "esbuild": "^0.14.25",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "flatpickr": "^4.6.9",
    "heroicons": "^2.0.1",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "luxon": "^1.28.1",
    "mousetrap": "^1.6.5",
    "postcss": "^8.4.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.2.0",
    "postcss-nested": "^5.0.4",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-preset-env": "^6.7.0",
    "regenerator-runtime": "^0.13.9",
    "simplemde": "^1.11.2",
    "stimulus-use": "^0.50.0-2",
    "tailwindcss": "^3.0.18",
    "tailwindcss-stimulus-components": "^3.0.3",
    "tippy.js": "^6.3.0",
    "trix": "^1.3.1",
    "urijs": "^1.19.11"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "esbuild-visualizer": "^0.3.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "prettier": "^2.5.1",
    "prettier-plugin-erb": "^0.4.0"
